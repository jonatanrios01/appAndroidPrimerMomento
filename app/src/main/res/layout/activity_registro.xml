<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f3f3f"
    tools:context=".activity_registro">

    <Button
        android:id="@+id/btn_volver_reg"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#2B2B2B"
        android:text="Volver"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="22dp" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#2B2B2B"
        android:text="Guardar"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="559dp" />

    <EditText
        android:id="@+id/input_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="#DDDEC6"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="474dp" />

    <EditText
        android:id="@+id/input_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre Usuario"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#DDDEC6"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="225dp" />

    <EditText
        android:id="@+id/input_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Correo Usuario"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="#DDDEC6"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="348dp" />

    <EditText
        android:id="@+id/input_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Telefono Usuario"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColorHint="#DDDEC6"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="412dp" />

    <EditText
        android:id="@+id/input_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Id Usuario"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorHint="#DDDEC6"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="162dp" />

    <EditText
        android:id="@+id/input_user_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Apellido Usuario"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#DDDEC6"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="285dp" />

    <TextView
        android:id="@+id/tag_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro"
        android:textColor="#DDDEC6"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="97dp" />

</androidx.constraintlayout.widget.ConstraintLayout>